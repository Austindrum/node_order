<%- include("./partials/header"); %>

<div class="container signin">
    <div class="form-box">
        <h2><%= i18n.__("SIGNIN") %></h2>
        <form action="/signin" method="POST">
            <div class="input-box">
                <span><%= i18n.__("WORKID") %></span>
                <input type="text" name="work_id" placeholder="<%= i18n.__("WORKID") %>">
            </div>
            <div class="input-box">
                <span><%= i18n.__("PASSWORD") %></span>
                <input type="password" name="password" placeholder="<%= i18n.__("PASSWORD") %>" autocomplete>
            </div>
            <div class="input-box">
                <input type="submit" value="<%= i18n.__("SUBMIT") %>">
            </div>
        </form>
        <div class="lang">
            <a href="/en" class="<%= lang === "en" ? 'active' : "" %>">English</a>
            <span>/</span>
            <a href="/zh" class="<%= lang === "zh" ? 'active' : "" %>">Chinese</a>
        </div>
        <div class="browser-suggest">
            <p><%= i18n.__("BROWSER_SUGGEST") %></p>
            <p>Chrome ^57, Firefox ^52, Safari ^10.1, Edge ^16</p>
        </div>
    </div>
</div>

<%- include("./partials/footer"); %>
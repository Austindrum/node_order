<%- include("./partials/header"); %>

<div class="container">
    <h2>Sign in</h2>
    <form action="/signin" method="POST">
        <div class="input-box">
            <span>ID</span>
            <input type="text" name="work_id" placeholder="Your ID">
        </div>
        <div class="input-box">
            <span>Password</span>
            <input type="password" name="password" placeholder="Your Password">
        </div>
        <div class="input-box">
            <input type="submit" value="Submit">
        </div>
    </form>
</div>


<%- include("./partials/header"); %>

<div class="container signin">
    <div class="form-box">
        <h2><%= i18n.__("SIGNIN") %></h2>
        <form action="/signin" method="POST">
            <div class="input-box">
                <span><%= i18n.__("WORKID") %></span>
                <input type="text" name="work_id" placeholder="<%= i18n.__("WORKID") %>">
            </div>
            <div class="input-box">
                <span><%= i18n.__("PASSWORD") %></span>
                <input type="password" name="password" placeholder="<%= i18n.__("PASSWORD") %>" autocomplete>
            </div>
            <div class="input-box">
                <input type="submit" value="<%= i18n.__("SUBMIT") %>">
            </div>
        </form>
        <div class="lang">
            <a href="/en" class="<%= lang === "en" ? 'active' : "" %>"><%= i18n.__("LANG_EN") %></a>
            <span>/</span>
            <a href="/zh" class="<%= lang === "zh" ? 'active' : "" %>"><%= i18n.__("LANG_ZH") %></a>
        </div>
    </div>
</div>

<%- include("./partials/footer"); %>
<%- include("./partials/header"); %>

<div class="container profile">
    <!-- <h1>Profile</h1> -->
    <div class="form-box">
        <h2>Profile</h2>
        <form action="/user?_method=PUT" method="POST">
            <div class="input-box">
                <span>ID</span>
                <div class="user-id"><%= user.work_id %></div>
            </div>
            <div class="input-box">
                <span>Current Password</span>
                <input type="password" name="current_password" placeholder="Current Password" autocomplete>
            </div>
            <div class="input-box">
                <span>New Password</span>
                <input type="password" name="new_password" placeholder="New Password" autocomplete>
            </div>
            <div class="input-box">
                <input type="submit" value="Change Password">
            </div>
        </form>
    </div>
</div>

<script src="/profile.js"></script>
<%- include("./partials/footer"); %>
<%- include("./partials/header"); %>

<div class="container profile">
    <div class="form-box">
        <h2><%= i18n.__("NAV_PROFILE") %></h2>
        <form action="/user?_method=PUT" method="POST">
            <div class="input-box">
                <span><%= i18n.__("WORKID") %></span>
                <div class="user-id"><%= user.work_id %></div>
            </div>
            <div class="input-box">
                <span><%= i18n.__("CURRENTPASSWORD") %></span>
                <input type="password" name="current_password" placeholder="<%= i18n.__("CURRENTPASSWORD") %>" autocomplete>
            </div>
            <div class="input-box">
                <span><%= i18n.__("NEWPASSWORD") %></span>
                <input type="password" name="new_password" placeholder="<%= i18n.__("NEWPASSWORD") %>" autocomplete>
            </div>
            <div class="input-box">
                <input type="submit" value="<%= i18n.__("SUBMIT") %>">
            </div>
        </form>
    </div>
</div>

<script src="/profile.js"></script>
<%- include("./partials/footer"); %>